<% content_for :alert do %>
  <%= devise_error_messages! %>
<% end %>  

<div class="row">
  <div class="col-xs-10 col-sm-6 col-xs-offset-1 col-sm-offset-3">
    <div class="login-box">
      <div class="logo">
        <h3 class="align-center"><%= t('h3.text3') %></h3>    
      </div>
      <div class="card">
        <div class="body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>
            <div class="input-group">
              <span class="input-group-addon"><i class="material-icons">lock</i></span>
              <div class="form-line">
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: t('input.placeholder3') %>
              </div>
            </div>
            <div class="input-group">
              <span class="input-group-addon"><i class="material-icons">lock</i></span>
              <div class="form-line">
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: t('input.placeholder4') %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-7 col-sm-7 col-md-5 col-xs-offset-5 col-sm-offset-5 col-md-offset-7">
                <%= f.submit t('input.value2'), class: 'btn btn-block bg-cyan waves-effect' %>
              </div>
            </div>
          <% end %>        
        </div>        
      </div>
    </div>
  </div>   
</div>