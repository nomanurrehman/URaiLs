<% content_for :alert do %>
  <%= devise_error_messages! %>
<% end %>  

<div class="row">
  <div class="col-xs-10 col-sm-6 col-xs-offset-1 col-sm-offset-3">
    <div class="login-box">
      <div class="logo">
        <h3 class="align-center"><%= t('h3.text2') %></h3>    
      </div>
      <div class="card">
        <div class="body">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <div class="input-group">
              <span class="input-group-addon"><i class="material-icons">person</i></span>
              <div class="form-line">
                <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: t('input.placeholder2') %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-7 col-sm-7 col-md-5 col-xs-offset-5 col-sm-offset-5 col-md-offset-7">
                <%= f.submit t('input.value1'), class: 'btn btn-block bg-cyan waves-effect' %>
              </div>
            </div>
          <% end %>        
        </div>        
      </div>
    </div>
  </div>   
</div>